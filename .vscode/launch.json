{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [
            {
                "name": "GCC build and debug active file",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // Path to your compiled executable
                "args": [],
                "stopAtEntry": false,
                "cwd": "${fileDirname}", // Current working directory for the program
                "environment": [],
                "externalConsole": false, // Set to true to run in an external console window
                "internalConsoleOptions": "openOnSessionStart", // Opens debug console
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe", // Path to gdb.exe (part of MinGW-w64)
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "preLaunchTask": "C/C++: gcc.exe build active file" // This task will compile your code
            }
        ]
}